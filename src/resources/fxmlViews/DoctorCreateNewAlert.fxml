<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane prefHeight="141.0" prefWidth="351.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.doctor.DoctorCreateNewAlertController">
   <top>
      <Label text="Create a &quot;call me&quot; alert" BorderPane.alignment="CENTER">
         <padding>
            <Insets top="10.0" />
         </padding>
      </Label>
   </top>
   <center>
      <HBox alignment="CENTER_LEFT" prefHeight="143.0" prefWidth="351.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Select  Nurse to alert" />
            <ComboBox fx:id="staffListChoiceBox" prefWidth="150.0" />
         </children>
         <padding>
            <Insets left="10.0" right="10.0" />
         </padding>
      </HBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" prefHeight="68.0" prefWidth="351.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="confirmationMessage" />
            <Button fx:id="sendAlertButton" mnemonicParsing="false" onAction="#handleSendAlertButtonAction" text="Send alert" />
         </children>
      </VBox>
   </bottom>
</BorderPane>
